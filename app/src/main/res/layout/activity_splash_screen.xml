<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen.SplashScreen"
    android:background="#1f1f1d">


    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleY="-3"
        android:scaleX="2"
        android:layout_alignParentBottom="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="407dp">

        <TextView
            android:id="@+id/skiathos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/aladin"
            android:shadowColor="@color/cadetblue"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="SKIATHOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/an_early_paradise"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="An Earthly Paradise"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skiathos" />

        <ImageView
            android:id="@+id/sun"
            android:layout_width="124dp"
            android:layout_height="128dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sun" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/sun2"
        android:layout_width="315dp"
        android:layout_height="279dp"
        android:layout_above="@+id/waves"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-67dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/palm_tree" />

</RelativeLayout>